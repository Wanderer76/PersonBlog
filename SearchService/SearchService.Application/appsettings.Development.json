{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "RabbitMQ": {
    "Connection": {
      "HostName": "localhost",
      "UserName": "admin",
      "Password": "admin",
      "Port": "5672"
    }
  },
  "PostSearchIndex": {
    "IndexSettingsJson": {
      "settings": {
        "index.max_ngram_diff": 14,
        "analysis": {
          "char_filter": {
            "yo_filter": {
              "type": "mapping",
              "mappings": [
                "ё => е",
                "й => и",
                "Ё => Е",
                "Й => И"
              ]
            }
          },
          "filter": {
            "deduplication_filter": {
              "type": "pattern_replace",
              "pattern": "([а-яА-Яa-zA-Z])\\1+",
              "replacement": "$1"
            }
          },
          "tokenizer": {
            "autocomplete_tokenizer": {
              "type": "ngram",
              "min_gram": 1,
              "max_gram": 15,
              "token_chars": [ "letter", "digit" ]
            }
          },
          "analyzer": {
            "autocomplete_analyzer": {
              "type": "custom",
              "char_filter": [ "yo_filter" ],
              "tokenizer": "autocomplete_tokenizer",
              "filter": [ "lowercase", "deduplication_filter" ]
            },
            "autocomplete_search_analyzer": {
              "type": "custom",
              "char_filter": [ "yo_filter" ],
              "tokenizer": "standard",
              "filter": [ "lowercase", "deduplication_filter" ]
            }
          }
        }
      },
      "mappings": {
        "properties": {
          "id": {
            "type": "keyword"
          },
          "blogId": {
            "type": "keyword"
          },
          "createdAt": {
            "type": "date"
          },
          "title": {
            "type": "text",
            "analyzer": "autocomplete_analyzer",
            "search_analyzer": "autocomplete_search_analyzer"
          },
          "description": {
            "type": "text"
          },
          "viewCount": {
            "type": "integer"
          },
          "keywords": {
            "type": "nested",
            "properties": {
              "word": {
                "type": "text",
                "analyzer": "autocomplete_analyzer",
                "search_analyzer": "autocomplete_search_analyzer"
              },
              "score": {
                "type": "double"
              }
            }
          }
        }
      }
    }
  }
}
